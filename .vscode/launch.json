{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/packages/api/src/index.js",
      "cwd": "${workspaceFolder}/packages/api"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current Opened File",
      "program": "${file}"
    }
  ]
}
